<%- include ('partials/header'); -%>
    <section class="mb-4">
        <div class="container row">
            <div class="col-md-2"></div>
            <div class="col-md-3">
                <img src="<%= currentuser.profile %>" height="200" width="200" style="border-radius: 50%;">
            </div>
            <div class="col-md-6 ml-5">
                <h1 class="display-4">Welcome, <%= currentuser.name %></h1>
                <div class="row">
                    <div class="col-md-5">
                        <a class="btn btn-block btn-lg btn-warning text-white" href="/cart/<%= currentuser._id %>"><i class="fa fa-shopping-cart" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;VIEW CART</a>
                    </div>
                    <div class="col-md-5">
                        <a class="btn btn-block btn-lg btn-danger text-white" href="/order/<%= currentuser._id %>"><i class="fa fa-file-text" aria-hidden="true"></i>&nbsp;&nbsp;&nbsp;&nbsp;MY ORDERS   </a>
                    </div>
                    </div>
            </div>
        </div>
        <hr>
        <div class="container">
            <h1 class="text-center">Personal Information&emsp;&emsp;&emsp;&emsp;<a href="/editprofile/profile"><i class="fa fa-pencil-square-o fa-2x text-dark"></i></a></h1>
            <table class="table table-hover table-striped">
                <tr>
                    <th>EMAIL ADDRESS</th><td></td><td></td>
                    <td><%= currentuser.username %></td>
                </tr>
                <tr>
                    <th>MOBILE NUMBER</th><td></td><td></td>
                    <td><%= currentuser.mobile %></td>
                </tr>
                <tr>
                    <th>ADDRESS</th><td></td><td></td>
                    <td><%= currentuser.address %></td>
                </tr>

            </table>
        </div>
</section><br><br><br>
<%- include ('partials/footer'); -%>