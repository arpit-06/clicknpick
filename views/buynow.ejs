<%- include ('partials/header'); -%> 
<% var total=0; %>
<% var c=0; %>
<% var d= new Date(); %>
<% var f = d.setDate(d.getDate()+10); %>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-1"></div>
        <div class="col-md-7">
          <div class="bg-white text-dark">
            <!-- <p class="h1 d-flex justify-content-center">My Cart (<%= currentuser.cart.length %>)</p><br> -->
            <div class="arpit p-3">
            <h3 class="text-secondary text-center">DELIEVERY ADDRESS&emsp;&emsp;<a href="/editprofile/<%= item._id %>"><i class="fa fa-pencil-square-o fa-2x text-dark"></i></a></h3>
            <h4><%= currentuser.name %></h4>
            <p><%= currentuser.address %></p>
            <p><%= currentuser.mobile %></p></div>
            <% user.cart.forEach((product)=>{ %>
                <% if(product.equals(item)){ %>
                    <% c=c+1; %>
                <% } %>
            <% }) %>
            <% if(c>=1) { %>
            <div class="arpit text-center p-2 h3 text-info mt-2">
              <h1>ORDER SUMMARY</h1>
              <h5>YOUR PRODUCT(S) WILL BE DELIEVERD BY <%= d.toDateString() %> </h5>
            </div>
            <% } %>
            <% if(c<1) {%>
                <br><div class="container text-center mt-5">
                <h1 class="text-success h1 text-center">YOU HAVE NOT SELECTED ANY PRODUCT !!!</h1><br>
                <a href="/home" class="btn btn-success btn-lg text-white text-center ">SHOP NOW</a>
              </div>
              <% } %>
            <% if(c>0){ %>
            <div class="arpit p-5">

            <div class="row bg ml-5">
                <div>
                    <img src="<%= item.image %>" alt="" width="300" height="300">
                </div>
                <div class="ml-5">
                    <h3><%= item.name %></h3>
                    <h6><%= item.title %></h6>
                    <h3>Rs. <%= item.price %></h3> <br>
                    <a href="/buy/<%= item._id %>/remove/<%= currentuser._id %>" class="btn btn-xs btn-light rounded-circle">-</a><input type="text" class="w-25 text-center" value="<%= c %>"><a href="/buy/<%= item._id %>/<%= currentuser._id %>" class="btn btn-light rounded-circle">+</a>&nbsp;&nbsp;&nbsp;&nbsp;
                    <a class="btn btn-lg btn-danger" href="/buy/remove/<%= item._id %>/<%= currentuser._id %>">REMOVE</a>
                </div>
            </div>

          </div>
          <% } %>
        </div>
    </div>
    <% if(c>0){ %>
        <div class="col-md-3 bg-white text-dark h-25 sticky-top arpit p-3">
          <p class="h1 d-flex justify-content-center">Price Details</p>
          <hr>
          <div class="d-flex justify-content-between">
            <p class="h4 ">Product Price(<%= c %> items)</p><p class="h4 ">Rs. <%= c*item.price %></p>
          </div>
          <div class="d-flex justify-content-between">
            <p class="h4 ">Delivery Charge</p><span style="font-size: 30px;">+</span><p class="h4 ">Rs. 30</p>
          </div>
          <hr>
          <div class="d-flex justify-content-between">
            <p class="h3 ">Amount Payable</p><p class="h3 text-success">Rs. <%= c*item.price + 30 %></p>
          </div><hr>
          <a href="/method1/<%= item._id %>" class="btn btn-success btn-block btn-lg text-white">CONTINUE&nbsp;>>>></a>
        </div>
        <% } %>
      </div>
    </div><br><br><br><br>
    

<%- include ('partials/footer'); -%>    
    